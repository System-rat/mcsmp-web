{
  "compilerOptions": {
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "target": "ES2015"
  },
  "include": [
    "frontend/src/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}